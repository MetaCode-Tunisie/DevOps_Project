pipeline {
    agent any
    stages {
        stage("Maven Test") {
            steps {
                sh "mvn -version"
            }
        }
        stage("JDK Test") {
            steps {
                sh "java -version"
            }
        }
        stage("Getting Project From Git") {
            steps {
                echo "Pulling"
                // Ajoutez ici l'étape de récupération du projet Git
            }
        }

        stage('SonarQube CodeQuality Check') {
            steps{
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar'
            }
        }

        stage('Unit Test') {
            steps {
                // Utilisez Maven pour exécuter vos tests JUnit
                sh 'mvn test'
            }
        }

        stage('Artifact Construction') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Deploy Nexus') {
            steps {
                sh 'mvn deploy -DaltDeploymentRepository=deploymentRepo::default::http://localhost:8081/repository/maven-releases/ -Dnexus.user=admin -Dnexus.password=nexus'
            }
        }
    }
}
