pipeline{
   agent any
    stages {
        stage("Testing Maven"){
            steps {
                sh "mvn -version"
            }
        }
        stage("Testing JDK"){
            steps {
                sh "java -version"
            }
        }
        stage("Chekout Git"){
            steps {
                echo "Pulling"
            }
        }
        stage('MVN COMPILE') {
            steps{
                 
                sh 'mvn compile'
           
        }
}
stage('Run Tests') {
    steps {
        
            sh 'mvn test' 
      
    }
}
stage('Generate JaCoCo Coverage Report') {
        steps {
             
               echo "jacoco check"
             
        }
    }
     stage('MVN SONARQUBE') {
            steps{
                 
                echo "snorqube check"
            }}
stage('Deploy') {
            steps {
         
               echo "nexus check"
        }
        }
stage('Run install') {
    steps {
        
            sh 'mvn install' 
      
    }
}
          stage('Build Docker Image') {
            steps {
                script {
                    def customImageName = "khalilimage"
                    sh "docker build -t $customImageName ."
                }
            }
        }
  stage('Push Docker Image') {
    steps {
        script {
            def dockerUsername = 'charguikhalil'
            def dockerPassword = 'khalilchargui'
            sh "docker login -u $dockerUsername -p $dockerPassword"
            
                sh 'docker tag khalilimage charguikhalil/khalilimage'
                sh 'docker push charguikhalil/khalilimage'
            
        }
    }
}
stage('Docker Compose') {
            steps {
                 
                sh 'docker compose down'
                sh'docker compose build'
                sh 'docker compose up -d'
                  
            }
        }
stage('Check Docker Compose Status') {
    steps {
        
        sh 'docker compose ps'
      
    }
}
    }
 
}
