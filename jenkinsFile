pipeline{
    agent any
    stages {
        stage(" Maven Test "){
            steps {
                sh "mvn -version"
            }
        }
        stage("JDK Test "){
            steps {
                sh "java -version"
            }
        }
        stage("Getting Projet From Git"){
            steps {
                echo "Pulling"
            }
        }






              stage('SonarQube CodeQuality Check') {
            steps {
                script {
                    // Use a cache for the SonarQube scanner to speed up future runs
                    def sonarCacheDir = "${tool name: 'SonarQube Scanner', type: 'hudson.plugins.sonar.SonarRunnerInstallation'}/.sonar/cache"
                    if (!fileExists(sonarCacheDir)) {
                        sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar'
                    } else {
                        echo "Using cached SonarQube scanner"
                    }
                }
            }
        }


       stage('Unit Test') {
            steps {
                // Use Maven to run your JUnit tests
                sh 'mvn test'
            }
        }

       stage('Artifact Construction') {
            steps {
                sh 'mvn package'
            }
        }

       stage('Deploy Nexus') {
            steps {
           // Exécute la commande Maven pour déployer l'artefact sur Nexus
               sh 'mvn deploy -DskipTests=true'
           }
        }


    }
}
