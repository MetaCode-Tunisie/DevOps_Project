pipeline{
    agent any
    stages {
        stage("Testing Maven"){
            steps {
                sh "mvn -version"
            }
        }
        stage("Testing JDK"){
            steps {
                sh "java -version"
            }
        }
        stage("Chekout Git"){
            steps {
                echo "Pulling"
            }
        }
        stage('MVN COMPILE') {
            steps{
                 
                sh 'mvn compile'
           
        }
}
stage('Run Tests') {
    steps {
        
            sh 'mvn test' 
      
    }
}
stage('Generate JaCoCo Coverage Report') {
        steps {
             
                sh 'mvn jacoco:report'
             
        }
    }
     stage('MVN SONARQUBE') {
            steps{
                 
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=root'
            }}
stage('Deploy') {
            steps {
         
                sh 'mvn deploy -DskipTests -DaltDeploymentRepository=deploymentRepo::default::http://localhost:8081/repository/maven-releases/'
            
        }
        }
        
    }

}
